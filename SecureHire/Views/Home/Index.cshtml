@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold text-primary">Welcome to SecureHire</h1>
        <p class="lead">Your AI-proctored, cheating-proof interview experience</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-success">📋 Assessment Guidelines</h5>
                    <ul>
                        <li>Ensure you're alone and in a quiet room</li>
                        <li>Stay centered in front of your camera</li>
                        <li>Do not switch tabs or look away frequently</li>
                        <li>Background noise and multiple faces are flagged</li>
                        <li>4 warnings = automatic failure</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <div class="text-center">
                <a href="@Url.Action("Take", "Assessment")" class="btn btn-lg btn-primary px-5 py-3">
                    🚀 Start Interview Now
                </a>
                <p class="mt-3 text-muted">Make sure your webcam and microphone are active</p>
            </div>
        </div>
    </div>

    <div class="card mt-5 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">🧠 What makes SecureHire different?</h5>
            <p class="card-text">
                This platform uses AI to monitor candidates during assessments. It tracks eye movement, head posture, voice detection, and suspicious behaviors using real-time webcam and microphone analysis.
            </p>
        </div>
    </div>
</div>
